  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "archiver": "7.0.1",
    "commander": "13.1.0",
    "vite-plugin-dts": "4.5.3",
    "fs-extra": "11.3.0",
    "vite": "6.2.4"
  },
  "devDependencies": {
    "@types/archiver": "6.0.3",
